{{ 'product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign th_st = settings
  assign st = section.settings
  assign show_product_type = th_st.show_product_type
  assign show_review = th_st.show_review
  assign container = st.container
  assign bg_color = st.product_carousel_background_color
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign view_all_enable = st.view_all_enable
  assign text_view_all = st.text_view_all
  assign cls = st.collection
  if bl != blank
    assign cls = bl
  endif
  assign item_desktop = st.item_desktop
  assign item_row = st.item_row
  assign limit_products = st.limit_products | plus: 0
  assign carousel_autoplay = st.carousel_autoplay
  assign carousel_loop = st.carousel_loop
  assign carousel_arrows = st.carousel_arrows
  assign show_bullet_mobile = st.show_bullet_mobile
  assign carousel_bullets = st.carousel_bullets
  assign column_gap = st.column_gap
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif

  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif

  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
  assign collection = collections[cls]
-%}

{%- capture style -%}
{%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
{%- endif -%}
--section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px; --bls_product-item-vertical-space: 0px;
{%- endcapture -%}
<section
  class="bls__section bls__section-list-products {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spb_mobile }} bls__product{{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
  data-id="{{ section.id }}"
  data-type="product_list_carousel"
>
  <div class=" {{ container }} ">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }} {% if text_view_all -%}text-view-all{% endif %}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
        {%- if view_all_enable -%}
          {%- if text_view_all != blank -%}
            <div class="links-view-all">
              <a
                aria-label="links"
                href="{% if collection == blank %}#{% else %}{{ collection.url }}{% endif %}"
              >
                {{ text_view_all }}
                <i class="icon-chevrons-right"></i>
              </a>
            </div>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endif -%}
    <div
      class="swiper bls__swiper hover__show-nav"
      id="bls__swiper-{{ section.id }}"
      data-section-id="{{ section.id }}"
      data-autoplay="{{ carousel_autoplay }}"
      data-loop="{{ carousel_loop }}"
      data-mobile="1"
      data-tablet="2"
      data-desktop="{{ item_desktop }}"
      data-spacing="{{ column_gap }}"
      data-row="{{ item_row }}"
    >
      {%- if carousel_arrows != false -%}
        <div class="swipper-next-back">
          <div class="swiper-arrow swiper-next swiper-button-next box-shadow"><i class="icon-chevron-right"></i></div>
          <div class="swiper-arrow swiper-prev swiper-button-prev box-shadow"><i class="icon-chevron-left"></i></div>
        </div>
      {%- endif -%}
      <div class="swiper-wrapper" style="--perload-gap: {{ column_gap }}px">
        {%- if collection.products.size == 0 -%}
          {%- for i in (1..limit_products) -%}
            <div class="swiper-slide">
              <div class="bls__product-item flex flex-nowrap mb-15">
                <div class="bls__product-img overflow-hidden relative col-3 mr-15 border mw-100">
                  <a role="link" aria-disabled="true">
                    {%- render 'placeholder-render' | type: 'product' -%}
                  </a>
                </div>
                <div class="bls__product-details flex-1">
                  <a role="link" aria-disabled="true">{{ 'products.product.product_placeholder' | t }}</a>
                  <div class="bls__product-price mb-7">{%- render 'price' -%}</div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- for product in collection.products limit: limit_products -%}
            {%- if product.available -%}{%- endif -%}
            {%- liquid
              assign sold_out = false
              assign compare_at_price = product.compare_at_price
              assign price = product.price
              assign sale = false
              if compare_at_price > price and compare_at_price != blank
                assign sale = true
              endif
              assign product_avail = false
              assign product_qty = 0
              assign pre_order = false
              if product.has_only_default_variant == false
                if product.options_with_values.size < 2
                  for variant in product.variants limit: 1
                    assign product_qty = product_qty | plus: variant.inventory_quantity
                    assign product_avail = variant.available
                    assign product_management = variant.inventory_management
                    assign compare_at_price = variant.compare_at_price
                    assign price = variant.price
                  endfor
                  if product_management != null
                    if product_qty < 1
                      if product_avail == true
                        assign pre_order = true
                        assign sold_out = false
                      else
                        assign pre_order = false
                        assign sold_out = true
                      endif
                    else
                      assign pre_order = false
                      assign sold_out = false
                    endif
                  else
                    assign pre_order = false
                    assign sold_out = false
                  endif
                else
                  assign product_management = 'shopify'
                  for variant in product.variants
                    assign product_qty = product_qty | plus: variant.inventory_quantity
                    if variant.available == true
                      assign product_avail = true
                    endif
                    if variant.inventory_management == null
                      assign product_management = 'null'
                    endif
                  endfor
                  assign compare_at_price = product.variants[0].compare_at_price
                  assign price = product.variants[0].price
                  if product_management != 'null'
                    if product_qty < 1
                      if product_avail == true
                        assign pre_order = true
                        assign sold_out = false
                      else
                        assign pre_order = false
                        assign sold_out = true
                      endif
                    else
                      assign pre_order = false
                      assign sold_out = false
                    endif
                  else
                    assign pre_order = false
                    assign sold_out = false
                  endif
                endif
              else
                if product.available != true
                  assign sold_out = true
                endif
                assign qty = 0
                for v in product.variants
                  if v.inventory_quantity
                    assign qty = qty | plus: v.inventory_quantity
                  endif
                endfor
                if qty < 1 and product.available == true
                  assign pre_order = true
                  assign sold_out = false
                endif
                for v in product.variants
                  if v.inventory_management == null
                    assign pre_order = false
                    assign sold_out = false
                  endif
                endfor
              endif

              assign label = false
              if sold_out == true or sale == true or pre_order == true
                assign label = true
              endif
              assign p = compare_at_price | minus: price
              if p > 0
                assign p = p | times: 100.0 | divided_by: compare_at_price | round
              endif
            -%}
            <div class="swiper-slide">
              <div class="bls__product-item {% if bg_color != blank %}item-product-list{% endif %} flex flex-nowrap mb-20 last-0">
                <div class="bls__product-img overflow-hidden relative col-3 mr-15">
                  <a href="{{ product.url | within: collection }}">
                    {%- if product.featured_image != blank -%}
                      {%- render 'responsive-image' | image: product.featured_image | type: 'product' -%}
                    {%- else -%}
                      {%- render 'placeholder-render' | type: 'product' | cls: 'bls__product-list-plh' -%}
                    {%- endif -%}
                  </a>
                </div>
                <div class="bls__product-details flex-1 d-flex flex-column justify-content-center">
                  {%- if label -%}
                    <div class="bls__product-label fs-12 pointer-events-none absolute">
                      {%- if compare_at_price > price and compare_at_price != blank -%}
                        <div class="bls__sale-label">
                          -
                          {{- p -}}
                          %
                        </div>
                      {%- endif -%}
                      {%- if sold_out -%}
                        <div class="bls__sold-out-label">
                          {{ 'products.product.sold_out' | t }}
                        </div>
                      {%- else -%}
                        {%- if pre_order -%}
                          <div class="bls__pre-order-label">
                            {{ 'products.product.pre_order' | t }}
                          </div>
                        {%- endif -%}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  {%- if show_product_type -%}
                    <div class="bls__product-type fs-small mt-5 mb-5">
                      {{ product.type }}
                    </div>
                  {%- endif -%}
                  <h3 class="bls__product-name regular mb-0">
                    <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
                  </h3>
                  {%- if show_review -%}
                    <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
                  {%- endif -%}
                  <div class="bls__product-price mt-7">
                    {%- render 'price', product: product, use_variant: true, price_class: 'price--large' -%}
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
      {%- if carousel_bullets != false -%}
        <div class="swiper-pagination"></div>
      {%- endif -%}
      {%- if show_bullet_mobile != false -%}
        <div class="swiper-pagination show-on-mobile"></div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Products list carousel",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Top Selling Products"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "color",
      "id": "product_carousel_background_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Product settings"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Select collection"
    },
    {
      "type": "range",
      "id": "limit_products",
      "label": "Products to show",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "item_desktop",
      "label": "Items per row (Desktop)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "item_row",
      "label": "Row items",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "column_gap",
      "label": "Products gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "checkbox",
      "id": "carousel_autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_loop",
      "label": "Infinity",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_arrows",
      "label": "Show arrows",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_bullets",
      "label": "Show bullets both on desktop and mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bullet_mobile",
      "label": "Only show bullets on mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "View all"
    },
    {
      "type": "checkbox",
      "id": "view_all_enable",
      "label": "Show \"View all\"",
      "default": false
    },
    {
      "type": "text",
      "id": "text_view_all",
      "label": "Text",
      "default": "View All"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Products list carousel"
    }
  ]
}
{% endschema %}
