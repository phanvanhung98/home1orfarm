              {%- render 'social-media-links', custom_class: '' -%}
            </div>
          {%- endif -%}
          {%- render 'payment-icon', custom_class: '' -%}
        </div>
      </div>
    </div>
  </div>
</footer>
{%- if st.back_to_top != blank -%}
