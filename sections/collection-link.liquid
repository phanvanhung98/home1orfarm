{{ 'collections-item.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign st = section.settings
  assign container = st.container
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign bg_color = st.background_color
  assign design_collection = st.design_collection
  assign collection_type = st.collection_type
  assign link_font_weight = st.link_font_weight
  assign link_font_size = st.link_font_size
  assign content_width_box_link = st.content_width_box_link
  assign show_count_product = st.show_count_product
  assign column_gap = st.column_gap
  assign enabled_animations = settings.animations_enabled
  if column_gap > 30
  endif
  if column_gap > 15
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif

  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif

  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
-%}
{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px; --bls-gutter-x:
  {{ column_gap }}px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spb_mobile }} bls__collection-link {{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
  id="{{ section.id }}"
  data-id="{{ section.id }}"
>
  <div class="{{ container }} section-full">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }} {{ design_collection }} {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="bls__collection-link-grid" style="--content-box-link: {{ content_width_box_link }}%;">
      <div
        class="row justify-content-center"
        style="--bs-gutter-x: {{ column_gap }}px"
      >
        {%- for block in section.blocks -%}
          {%- liquid
            assign block_st = block.settings
            assign link_collection = block_st.collection
            assign title_collection = link_collection.title
            assign title_collection = block_st.title_collection | default: title_collection
            assign count_product = link_collection.all_products_count | default: 0
          -%}
          <div class="bls__collection-links d-inline-flex {{ design_collection }} {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}"
            {% if enabled_animations %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <a
              aria-label="links"
              href="{% if link_collection == blank %}#{% else %}{{ link_collection.url }}{% endif %}"
              class="whitespace-nowrap btn-{{ collection_type }}"
              style="--link-font-size: {{ link_font_size }}px;--link-font-weight: {{ link_font_weight }};"
            >
              {%- if title_collection != blank -%}
                {{- title_collection | escape -}}
              {%- else -%}
                {{- 'onboarding.collection_title' | t -}}
              {%- endif -%}
              {%- if show_count_product != blank and show_count_product != false -%}
                <span class="link__collection-count">
                  {%- if count_product > 1 -%}
                    {{- 'collection.counts_html' | t: count: count_product -}}
                  {%- else -%}
                    {{- 'collection.count_html' | t: count: count_product -}}
                  {%- endif -%}
                </span>
              {%- endif -%}
            </a>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection link",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "select",
      "id": "design_collection",
      "label": "Content color",
      "options": [
        {
          "value": "clt-white",
          "label": "Light"
        },
        {
          "value": "clt-dark",
          "label": "Dark"
        }
      ],
      "default": "clt-dark"
    },
    {
      "type": "header",
      "content": "Collection settings"
    },
    {
      "type": "checkbox",
      "id": "show_count_product",
      "label": "Show count product",
      "default": false
    },
    {
      "type": "range",
      "id": "content_width_box_link",
      "label": "Content max width",
      "min": 30,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "link_font_size",
      "min": 16,
      "max": 80,
      "step": 1,
      "label": "Font size",
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "link_font_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Font weight",
      "default": 400
    },
    {
      "type": "select",
      "id": "collection_type",
      "label": "Button type",
      "default": "primary",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "link",
          "label": "Link"
        }
      ]
    },
    {
      "type": "range",
      "min": 0,
      "max": 50,
      "unit": "px",
      "step": 5,
      "default": 30,
      "label": "Column gap",
      "id": "column_gap"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "link_item",
      "name": "Item link",
      "settings": [
        {
          "type": "text",
          "id": "title_collection",
          "label": "Collection heading"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection link",
      "blocks": [
        {
          "type": "link_item"
        },
        {
          "type": "link_item"
        },
        {
          "type": "link_item"
        },
        {
          "type": "link_item"
        }
      ]
    }
  ]
}
{% endschema %}
