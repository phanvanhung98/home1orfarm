{{ 'product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign th_st = settings
  assign product_style = th_st.product_style
  assign st = section.settings
  assign container = st.container
  assign bg_color = st.product_carousel_background_color
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign text_as_title = st.text_as_title
  assign enable_banner = st.enable_banner
  assign banner_img = st.banner_img
  assign banner_position = st.banner_position
  assign banner_width = st.banner_width
  assign end_time = st.end_time
  assign video_local = st.video_local
  assign video_options = st.video_options
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign enabled_animations = th_st.animations_enabled
  assign show_banner = ''
  if st.enable_banner
    assign show_banner = ' show-banner'
  endif

  assign banner_url = ''
  if st.banner_link != blank
    assign banner_url = st.banner_link
  else
    assign banner_url = '#'
  endif

  assign banner_position = ''
  if st.banner_position == 'position-right'
    assign banner_position = ' flex-row-reverse'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif

  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
  assign video_url = st.video_url

  assign video_id = ''
  if video_url.type == 'youtube'
    assign video_id = video_url | replace: 'https://www.youtube.com/watch?v=', ''
  elsif video_url.type == 'vimeo'
    assign video_id = video_url | replace: 'https://vimeo.com/', ''
  endif
-%}

{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color:{{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom:{{ st.padding_bottom }}px;
  --bls_product-item-vertical-space: 0px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spb_mobile }} bls__product{{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
  data-id="{{ section.id }}"
  data-type="product_deal"
>
  <div class=" {{ container }} ">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }} {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="bls__grid {{ product_style }}">
      <div class="{% if enabled_animations %}scroll-trigger animate--slide-in{% endif %} bls__super-deal-header bls__section-header flex flex-wrap align-items-center justify-content-between {% if text_as_title %}text-as-title{% endif %}">
        {%- if text_as_title -%}
          <h2 class="bls__section-heading mb-0">{{ st.super_deal_text }}</h2>
        {%- else -%}
          <div class="heading-color heading-weight">{{ st.super_deal_text }}</div>
        {%- endif -%}
        <div class="bls__superdeal-countdown flex flex-wrap align-items-center {% if text_as_title %}mb-5{% endif %}">
          {{ st.super_deal_message }}
          {% if end_time != blank %}
            <div class="bls__timer " data-timer="{{ end_time }}">
              <div class="timer-display flex">
                <div class="timer-block">
                  <span class="timer-block__num js-timer-days">00</span>
                </div>
                <div class="timer-block">
                  <span class="timer-block__num js-timer-hours">00</span>
                </div>
                <div class="timer-block">
                  <span class="timer-block__num js-timer-minutes">00</span>
                </div>
                <div class="timer-block">
                  <span class="timer-block__num js-timer-seconds">00</span>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="row flex-nowrap {{ banner_position }}" style="--product-banner-width: {{ banner_width }}%">
        {%- if enable_banner -%}
          <div class="bls__product-banner d-none d-xl-block {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}">
            {%- case st.banner_type -%}
              {%- when 'video' -%}
                <div
                  class="video-container"
                  style="--video-mobile-height: {{ st.mobile_height }}px; --video-desktop-height: {{ st.desktop_height }}px"
                >
                  <div class="video-foreground">
                    {%- if video_options == 'online' -%}
                      {%- if video_url.type == 'youtube' -%}
                        <video-youtube data-id="{{ block.id }}">
                          <iframe
                            src="https://www.youtube.com/embed/{{ video_id }}?controls=0&autoplay=1&mute=1&playsinline=1&loop=1&playlist={{ video_id }}"
                          ></iframe>
                        </video-youtube>
                      {%- elsif video_url.type == 'vimeo' -%}
                        <iframe
                          src="https://player.vimeo.com/video/{{ video_id }}?controls=0background=1&autoplay=1&muted=1&loop=1"
                          frameborder="0"
                          allowfullscreen
                        ></iframe>
                      {%- endif -%}
                    {%- else -%}
                      <video
                        controls="true"
                        loop="true"
                        muted="true"
                        playsinline="true"
                        autoplay="true"
                        src="{{ video_local.sources[1].url }}"
                      ></video>
                    {%- endif -%}
                  </div>
                </div>
              {%- else -%}
                <a
                  class="h-full w-full d-block"
                  href="{{ banner_url }}"
                  style="background-image: url('{{ banner_img | image_url }}'); --bls__banner-width: {{ banner_width }}%;"
                ></a>
            {%- endcase -%}
          </div>
        {%- endif -%}
        <div class="bls__product-with-banner{{ show_banner }}">
          {%- render 'product-carousel-layout' | st: st -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Products deal",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bestseller Product"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "color",
      "id": "product_carousel_background_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Super deal settings"
    },
    {
      "type": "richtext",
      "id": "super_deal_text",
      "label": "Text",
      "default": "<p>HOT DEAL! GET THE BEST PRICES</p>"
    },
    {
      "type": "checkbox",
      "id": "text_as_title",
      "label": "Text as title",
      "default": false
    },
    {
      "type": "richtext",
      "id": "super_deal_message",
      "label": "Message",
      "default": "<p>Hurry up! Offer ends in:</p>"
    },
    {
      "type": "text",
      "id": "end_time",
      "label": "End time",
      "default": "12-24-2025",
      "info": "e.g. mm-dd-yyyy"
    },
    {
      "type": "header",
      "content": "Product settings"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Select collection"
    },
    {
      "type": "range",
      "id": "limit_products",
      "label": "Products to show",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "item_desktop",
      "label": "Items per row (Desktop)",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "column_gap",
      "label": "Column gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "checkbox",
      "id": "carousel_autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_loop",
      "label": "Infinity",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_arrows",
      "label": "Show arrows",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "carousel_bullets",
      "label": "Show bullets both on desktop and mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bullet_mobile",
      "label": "Only show bullets on mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "Banner settings"
    },
    {
      "type": "checkbox",
      "id": "enable_banner",
      "label": "Show banner",
      "default": false
    },
    {
      "type": "select",
      "id": "banner_type",
      "label": "Banner type",
      "default": "image",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Image",
      "info": "330 x 560px recommended"
    },
    {
      "type": "select",
      "id": "video_options",
      "label": "Video options",
      "default": "local",
      "options": [
        {
          "value": "local",
          "label": "Local"
        },
        {
          "value": "online",
          "label": "Online"
        }
      ]
    },
    {
      "id": "video_url",
      "type": "video_url",
      "label": "Video url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "id": "video_local",
      "type": "video",
      "label": "Upload local video"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 600,
      "max": 1100,
      "step": 5,
      "unit": "px",
      "label": "Desktop height",
      "default": 650
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 200,
      "max": 600,
      "step": 5,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "select",
      "id": "banner_position",
      "label": "Position",
      "default": "position-left",
      "options": [
        {
          "value": "position-left",
          "label": "Left"
        },
        {
          "value": "position-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner link"
    },
    {
      "type": "range",
      "id": "banner_width",
      "label": "Banner width",
      "min": 15,
      "max": 50,
      "step": 1,
      "unit": "%",
      "default": 30
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Products deal"
    }
  ]
}
{% endschema %}
